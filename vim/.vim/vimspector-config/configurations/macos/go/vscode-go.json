{
  "configurations": {
    "Test": {
      "adapter": "vscode-go",
      "configuration": {
        "request": "launch",
        "mode": "test",
        "type": "go",
        "program": "${fileDirname}",
        "args": [ "*${CommandLineArgs}" ],
        "dlvToolPath": "$HOME/Projects/go/bin/dlv"
      }
    },
    "Run": {
      "adapter": "vscode-go",
      "configuration": {
        "request": "launch",
        "mode": "debug",
        "type": "go",
        "program": "${file}",
        "args": [ "*${CommandLineArgs}" ],
        "dlvToolPath": "$HOME/Projects/go/bin/dlv"
      }
    }
  }
}
